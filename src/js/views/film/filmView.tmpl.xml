<fest:template xmlns:fest="http://fest.mail.ru" context_name="film">
    <main class="main">
        <div class="film">
            <div class="film__description">
                <img class="film__img" src="/images/films/{film.image}" alt="название фильма"/>
            </div>
            <div class="film__description">
                <div class="title"><fest:value>film.title</fest:value></div>
                <div class="hr"></div>
                <div class="list">
                    <div class="list__item">Genre</div>
                    <div class="list__item">Date: <fest:value>film.date</fest:value></div>
                    <div class="list__item">Name Surname</div>
                </div>
                <div class="hr"></div>
                <div>
                    <fest:value>film.description</fest:value>
                </div>
                <hr/>
            </div>
        </div>
        <div class="rating">
            <div class="rating__block">
                <div class="title">Рейтинг фильма:
                    <div class="title_yellow"> 7.44</div>
                </div>
            </div>
            <div class="rating__block">
                <div class="title">Комментарии:
                    <div class="title_yellow">100</div>
                    <div class="vr"></div>
                    <div class="title_success"> 24</div>
                    <div class="vr"></div>
                    <div class="title_error"> 76</div>
                </div>
            </div>
            <div class="rating__block">
                <i class="fas fa-star fa-2x film__star"></i>
                <i class="fas fa-star fa-2x film__star"></i>
                <i class="fas fa-star fa-2x film__star"></i>
                <i class="fas fa-star fa-2x film__star"></i>
                <i class="fas fa-star fa-2x film__star"></i>
            </div>
        </div>
        <div class="feedback-form">
            <div class="hr"></div>
            <div class="title">Расскажите что Вы думаете о фильме:</div>
            <form class="form">
                <input class="input" type="text" placeholder="Заголовок"/>
                <textarea class="textarea" placeholder="Текст рецензии"></textarea>
                <input class="button" type="button" value="Отправить"/>
            </form>
            <div class="hr"></div>
        </div>
        <div class="feedbacks">
            <div class="title">Рецензии:</div>
            <div class="profile__reviews">
                <div class="review review__positive">
                    <div class="review__author-info">
                        <img src="/src/images/avatar.jpg" alt="username" class="review__img"/>
                        <a href="/user">AlmostCurrentPerson</a>
                    </div>
                    <div class="title">Review's title</div>
                    <div>
