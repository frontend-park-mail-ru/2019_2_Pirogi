<fest:template xmlns:fest="http://fest.mail.ru" context_name="film">
    <main class="main">
        <div class="film-index">
        <div class="film">
            <div class="posters">
                <!--<img class="film__img" src="/images/films/{film.image}" alt="название фильма"/>-->
                <img class="posters__img posters__img_left" src="/src/images/tmp_film_card.jpg" alt="название фильма"/>
                <img class="posters__img posters__img_active" src="/images/{film.image}" alt="название фильма"/>
                <img class="posters__img posters__img_right" src="/src/images/tmp_film_card.jpg" alt="название фильма"/>
            </div>
            <div class="film__description">
                <!--<div class="title"></div>-->
                <div class="title film__title"><fest:value>film.title</fest:value></div>
                <div>
                    <div class="film__decription_main">Рейтинг: <fest:value>film.rating</fest:value></div>
                    <div class="film__decription_main">Жанры: <fest:for iterate="film.genres" index="i" value="v">
                        <fest:value>v</fest:value>, <!-- abc -->
                    </fest:for></div>
                    <div class="film__decription_main"><fest:value>film.date</fest:value></div>
                    <div class="film__decription_main">Актеры:  <a href="/actor">Вася Пупкин</a>, <fest:for iterate="film.actors" index="i" value="v">
                        <a href="/actor"><fest:value>v</fest:value></a>, <!-- abc -->
                    </fest:for></div>
                    <div class="film__decription_main">Режиссеры:  <fest:for iterate="film.directors" index="i" value="v">
                        <fest:value>v</fest:value>, <!-- abc -->
                    </fest:for></div>
                </div>
                <div>
                    <fest:value>film.description</fest:value>
                </div>
                <hr/>
            </div>
        </div>
        <div class="user-block">
            <div disabled="true" class="button user-block__button">Купить билет</div>
            <div class="button user-block__button">В список</div>
            <div class="button user-block__button">
                <i class="fas fa-star fa-2x film__star"></i>
                <i class="fas fa-star fa-2x film__star"></i>
                <i class="fas fa-star fa-2x film__star"></i>
                <i class="fas fa-star fa-2x film__star"></i>
                <i class="fas fa-star fa-2x film__star"></i>
            </div>
        </div>
        <div class="feedback-form">
            <div class="hr"></div>
            <div class="title">Расскажите что Вы думаете о фильме:</div>
            <form class="form">
                <div class="feedback-form__top">
                    <input class="input feedback-form__title js-title-input" type="text" placeholder="Заголовок"/>
                    <div class="radio-form">
                        <div class="radio-form__button">
                            <input  type="radio"/><div>Понравилось</div>
                        </div>
                        <div class="radio-form__button">
                            <input  type="radio"/><div>Не понравилось</div>
                        </div>
                    </div>
                </div>
                <textarea class="textarea js-text-input" placeholder="Текст рецензии"></textarea>
                <input class="button js-review-button" type="button" value="Отправить"/>
            </form>
            <div class="hr"></div>
        </div>
