<fest:template xmlns:fest="http://fest.mail.ru" context_name="params">
    <div class="search">
        <div class="search-params">
            <form class="search-form js-search-form">
                <div class="search-form__input">
                    <div>Введите жанры: </div>
                    <input class="input" id="js-genre-input" name="genres" type="text" placeholder="Введите жанр"/>
                </div>
                <div class="search-form__input">
                    <div>Введите имена актеров: </div>
                    <input class="input" id="js-actor-input" name="persons" type="text" placeholder="Введите имя актера"/>
                </div>
                <div class="search-form__input">
                    <div>Введите минимальный рейтинг: </div>
                    <input class="input" id="js-ratingmin-input" name="ratingmin" type="text" placeholder="Введите рейтинг"/>
                </div>
                <div class="search-form__input">
                    <div>Введите страны: </div>
                    <input class="input" id="js-country-input" name="countries" type="text" placeholder="Введите страну"/>
                </div>
                <div class="search-form__input">
                    <div>Введите промежуток времени: </div>
                    <div>Год от </div>
                    <input class="input" id="js-yearmin-input" name="yearmin" type="text" placeholder="Введите год"/>
                    <div>до </div>
                    <input class="input" id="js-yearmax-input" name="yearmax" type="text" placeholder="Введите год"/>
                </div>
            </form>
            <input class="button" id="js-search-params" type="button" value="Применить"/>
        </div>
        <div class="hr"/>
        <div class="search-results">
            <div class="title">Вы искали:
<!--                <fest:value>params.genres</fest:value>-->
            </div>
            <div>666 результатов поиска</div>
            <div class="list">
                <fest:for iterate="params.filmsArray" index="i" value="film">
                    <div class="list__item search-results__film">
                        <div class="search-results__img">
                            <a href=" /film?filmID={film.id}"/>
                            <img  src="/images/films/{film.image}" alt="название фильма"/>
                        </div>
                        <div class="search-results__film-card">
                            <a href="/film?filmID={film.id}" class="title"><fest:value>film.title</fest:value></a>
                            <div>Жанры:
                                <fest:for iterate="film.genres" index="j" value="v">
                                    <a href="/search?genre={v}"><fest:value>v</fest:value></a>,
                                </fest:for>
                            </div>
                            <div>год: <a href="search?year={film.year}"><fest:value>film.year</fest:value></a></div>
                            <div>Актеры:
                                <fest:for iterate="film.persons" index="j" value="v">
                                    <a href="/actor?films&id={v.id}">
                                        <fest:value>v.name</fest:value>
                                    </a>,
                                </fest:for>
                            </div>
                            <div>
                                <fest:value>film.description</fest:value>
                            </div>
                        </div>
                    </div>
                </fest:for>
            </div>
        </div>

    </div>
    <div class="paginator">
        <div class="text paginator__item">1</div>
        <div class="text paginator__item">2</div>
        <div class="text paginator__item">...</div>
        <div class="text paginator__item">55</div>
    </div>
</fest:template>