<fest:template xmlns:fest="http://fest.mail.ru" context_name="params">
    <main class="main">
    <div class="genres">
        <div class="nav-block">
            <div class="title"> Выберите жанр </div>
            <div class="nav-block__list">
                <fest:for iterate="params.genres" index="j" value="v">
                    <a href="/search?genres={v}" class="button"><fest:value>v</fest:value></a>
                </fest:for>
            </div>
            <a href="/search" class="nav-block__button">уточнить поиск</a>
        </div>

        <div class="genres-index">
            <div class="genre-films-bar">
                <div class="title"><a href="/search?genres={params.genres[0]}"><fest:value>params.genres[0]</fest:value></a></div>
                <fest:for iterate="params.filmsArray" index="i" value="film">
                    <div class="film-card">
                        <div class="film-card__img">
                            <a href=" /film?filmID={film.id}"></a>
                            <img  src="/images/films/{film.images[0]}" alt="{film.title}"/>
                            <div class="title film-card__info">
                                <fest:value>film.title</fest:value>
                            </div>
                        </div>
                    </div>
                </fest:for>
            </div>
            <div class="genre-films-bar genre-films-bar_accent">
                <div class="title"><a href="/search?genres={params.genres[0]}"><fest:value>params.genres[3]</fest:value></a></div>
                <fest:for iterate="params.filmsArray" index="i" value="film">
                    <div class="film-card">
                        <div class="film-card__img">
                            <a href=" /film?filmID={film.id}"></a>
                            <img  src="/images/films/{film.image}" alt="{film.title}"/>
                            <div class="title film-card__info">
                                <fest:value>film.title</fest:value>
                            </div>
                        </div>
                    </div>
                </fest:for>
            </div>
        </div>
    </div>
    </main>
</fest:template>