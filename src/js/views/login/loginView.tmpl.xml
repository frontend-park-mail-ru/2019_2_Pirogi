<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <main class="main">
        <div class="login">
            <div class="login__form">
                <div class="login__auth">
                    <div class="title title_center">ВХОД</div>
                    <div class="login__iconbar login__iconbar_light">
                        <i class="fab fa-google-plus"></i>
                        <i class="fab fa-linkedin"></i>
                        <i class="fab fa-yandex"></i>
                    </div>
                    <input class="input" id="js-email-login" name="email" type="email" placeholder="Введите почту"/>
                    <input class="input" id="js-password-login" name="password" type="password" placeholder="Введите пароль"/>
                    <input class="button" id="js-login" type="button" value="войти"/>
                </div>
                <div class="login__register">
                    <div class="title title_center">Регистрация</div>
                    <div class="login__iconbar login__iconbar_dark">
                        <i class="fab fa-google-plus"></i>
                        <i class="fab fa-linkedin"></i>
                        <i class="fab fa-yandex"></i>
                    </div>
                    <input class="input" id="js-nickname-register" name="name" type="text" placeholder="Введите имя"/>
                    <input class="input" id="js-email-register" name="email" type="email" placeholder="Введите почту"/>
                    <input class="input" id="js-password-register" name="password" type="password" placeholder="Введите пароль"/>
                    <input class="input" id="js-password-register-clone" name="password-clone" type="password" placeholder="Повторите пароль"/>
                    <input class="button" id="js-register" type="button" value="войти"/>
                </div>
            </div>
        </div>
    </main>
<script src="https://kit.fontawesome.com/ddd516fce5.js"></script>
</fest:template>
