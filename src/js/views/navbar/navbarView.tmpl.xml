<fest:template xmlns:fest="http://fest.mail.ru" context_name="param">
    <div class="navbar">
        <a class="logo" href="/">CINSEAR</a>
        <input class="input navbar__input" type="text" placeholder="поиск"/>
        <a href="/new" class="navbar__item navbar__item_current">новинки</a>
        <a href="/films" class="navbar__item">фильмы</a>
        <a href="/ratings" class="navbar__item">рейтинги</a>
        <fest:choose>
            <fest:when test="param.isAuth">
                <a href="/profile" class="button">профиль</a>
                <input type="button" class="js-logout-button" value="выйти"></input>
            </fest:when>
            <fest:otherwise>
                <a href="/login" class="button">войти</a>
            </fest:otherwise>
        </fest:choose>
    </div>
</fest:template>